<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox id="detailsCard" fx:id="detailsCard" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
            <HBox alignment="CENTER">
                <Label fx:id="name" styleClass="details_big_label" text="\$name" />
            </HBox>
            <Label styleClass="details_label" text="Contact Information" />
            <GridPane vgap="5" hgap="5">
                <Label text="Phone:" styleClass="details_small_label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="phone" styleClass="details_small_label" text="\$phone"
                       GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Email:" styleClass="details_small_label" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="email" styleClass="details_small_label" text="\$email"
                       GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            <Label styleClass="details_label" text="Tags" />
            <FlowPane fx:id="tags" />
            <Label styleClass="details_label" text="Attributes" />
            <FlowPane fx:id="attributes" />
        </VBox>
    </GridPane>
</VBox>